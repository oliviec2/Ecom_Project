@{
    ViewData["Title"] = "Login Page";
}
 @model loginModel 

  <form action="login" method="post">

<table>

<tr>


<td>Email: </td>

<td><input type="text" name="email_id" /></td>

</tr>

<tr>

<td>Password: </td>

<td><input type="text" name="password" /></td>

</tr>

<tr>

<td colspan="2"><input type="submit" value="Submit Form" /></td>
<td colspan="2"><input type="reset" value="Reset Form" /></td>

</tr>

</table>

</form>
@* use this as well later! *@
<table cellpadding="0" cellspacing="0">

    <tr>

        <th>EMAIL ID</th>

        <th>PASSWORD</th>

    </tr>        



    @if(@Model!=null)

    {

        <tr>

            <td>@Model.email_id</td>

            <td>@Model.password</td>

        </tr>

        <tr>

            <td><p>&nbsp&nbsp Either Your E-mail ID and or Password was not successfully authenticated.Please Retry or else Register a new email id.</p></td>

        </tr>

    }

</table>

