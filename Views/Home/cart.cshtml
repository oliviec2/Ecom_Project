@{
    ViewData["Title"] = "Cart Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @ViewBag.Name</h1>
    
</div>

<title>Your Shopping Cart</title>
	
	
<body>
<div id="site">
			<header id="masthead">
			</header>
			<div id="content">
				<h1>Your Shopping Cart</h1>
				<form id="shopping-cart" action="cart.html" method="post">
					<table class="shopping-cart">
						<thead>
							<tr>
								<th scope="col">Item</th>
								<th scope="col">Qty</th>
								<th scope="col" colspan="2">Price</th>
							</tr>
						</thead>
						<tbody>

						</tbody>
					</table>
					<p id="sub-total">
						<strong>Sub Total: <span id="stotal"></span></strong>
					</p>
					<ul id="shopping-cart-actions">
						<li>	
						<input type="submit" name="update" id="update-cart" class="btn" value="Update Cart" asp-area="" asp-controller="Home" asp-action="cart" style="background-color: #4182fc"/>
							  
						</li>
					<li>
						
	
						 <input type="submit"  name="delete" id="empty-cart"class="btn"value="Empty Cart" asp-area="" asp-controller="Home" asp-action="cart" style="background-color: #4182fc"/> 
	                     @* <input type="submit"  name="delete" id="empty-cart"class="btn" value="Empty Cart" asp-area=""style="background-color: #4182fc"/> *@
						
						
					</li>
						<li>
							@* <a href="product.html" class="btn" style="background-color: #4182fc">Continue Shopping</a> *@
						<a class="btn" style="background-color: #4182fc" asp-area="" asp-controller="Home" asp-action="product">Continue Shopping</a>
                        </li>
						<li>
							@* <a href="checkout.html" class="btn" style="background-color: #4182fc;">Go To Checkout</a> *@
							<a class="btn" style="background-color: #4182fc" asp-area="" asp-controller="Home" asp-action="checkout">Got To Checkout</a>

						</li>
					</ul>
				</form>
			</div>



		</div>



</body>